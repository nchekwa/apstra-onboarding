{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "title": "blueprint",
    "definitions": {
        "BlueprintDef": {
            "type": "object",
            "properties": {
                "apstra": {
                    "type": "string"
                },
                "sync": {
                    "type": "boolean",
                    "default": true
                },
                "parameters": {
                    "type": "object",
                    "properties": {
                        "routing-zone": {
                            "type": "object",
                            "properties": {
                                "vni_addend": {
                                    "type": "integer",
                                    "minimum": 4096,
                                    "maximum": 16777215
                                }
                            },
                            "additionalProperties": false
                        }
                    },
                    "additionalProperties": false
                },
                "routing-policies": {
                    "type": "array",
                    "additionalItems": true,
                    "items": {
                        "type": "object",
                        "properties": {
                            "name": {
                                "type": "string"
                            }
                        },
                        "additionalProperties": false,
                        "minProperties": 1,
                        "required": [
                            "name"
                        ]
                    }
                },
                "routing-zones": {
                    "type": "array",
                    "additionalItems": true,
                    "items": {
                        "type": "object",
                        "properties": {
                            "name": {
                                "type": "string"
                            },
                            "vlan_id": {
                                "type": "integer",
                                "minimum": 1,
                                "maximum": 4096
                            },
                            "leaf_loopback_ip_pools": {
                                "type": "array",
                                "additionalItems": true,
                                "uniqueItems": true,
                                "minItems": 1,
                                "items": {
                                    "type": "string"
                                }
                            },
                            "vni_id": {
                                "type": "integer",
                                "minimum": 4096,
                                "maximum": 16777215
                            },
                            "dhcp_servers": {
                                "type": "array",
                                "additionalItems": true,
                                "uniqueItems": true,
                                "minItems": 1,
                                "items": {
                                    "type": "string",
                                    "format": "ipv4",
                                    "minLength": 1
                                }
                            }
                        },
                        "additionalProperties": false,
                        "minProperties": 1,
                        "required": [
                            "name",
                            "vlan_id",
                            "leaf_loopback_ip_pools"
                        ]
                    }
                },
                "virtual-networks": {
                    "type": "array",
                    "additionalItems": true,
                    "items": {
                        "type": "object",
                        "properties": {
                            "name": {
                                "type": "string",
                                "maxLength": 30
                            },
                            "routing_zone": {
                                "type": "string",
                                "maxLength": 15
                            },
                            "vn_id": {
                                "type": "integer",
                                "minimum": 4096,
                                "maximum": 16777215
                            },
                            "ipv4_enabled": {
                                "type": "boolean",
                                "default": false
                            },
                            "vlan_id": {
                                "type": "integer",
                                "minimum": 1,
                                "maximum": 4095
                            },
                            "ipv4_subnet": {
                                "type": "string",
                                "format": "regex",
                                "pattern": "^(?:[0-9]{1,3}.){3}[0-9]{1,3}/[0-9]{1,2}$"
                            },
                            "virtual_gateway_ipv4": {
                                "type": "string",
                                "format": "ipv4"
                            },
                            "bound_to": {
                                "type": "array",
                                "additionalItems": true,
                                "items": {
                                    "type": "object",
                                    "properties": {
                                        "system": {
                                            "type": "string"
                                        },
                                        "vlan_id": {
                                            "type": "integer",
                                            "minimum": 1,
                                            "maximum": 4095
                                        },
                                        "access_switches": {
                                            "type": "array",
                                            "additionalItems": true,
                                            "uniqueItems": true,
                                            "minItems": 1,
                                            "items": {
                                                "type": "string"
                                            }
                                        }
                                    },
                                    "additionalProperties": false,
                                    "minProperties": 1,
                                    "required": [
                                        "system"
                                    ]
                                }
                            }
                        },
                        "additionalProperties": false,
                        "minProperties": 1,
                        "required": [
                            "name",
                            "routing_zone",
                            "vn_id",
                            "ipv4_enabled"
                        ],
                        "dependencies": {
                            "ipv4_subnet": {
                              "properties": {
                                "ipv4_enabled": {"const": true}
                              },
                              "required": ["ipv4_enabled"]
                            },
                            "virtual_gateway_ipv4": {
                              "properties": {
                                "ipv4_enabled": {"const": true}
                              },
                              "required": ["ipv4_enabled"]
                            }
                          }
                    }
                },
                "connectivity-templates": {
                    "type": "array",
                    "additionalItems": true,
                    "items": {
                        "type": "object",
                        "properties": {
                            "name": {
                                "type": "string"
                            },
                            "template": {
                                "type": "string"
                            },
                            "description": {
                                "type": "string"
                            },
                            "tags": {
                                "type": "array",
                                "additionalItems": true,
                                "items": {
                                    "type": "string"
                                }
                            },
                            "untagged_vn": {
                                "type": "string"
                            },
                            "tagged_vn": {
                                "type": "array",
                                "additionalItems": true,
                                "items": {
                                    "type": "string"
                                }
                            }
                        },
                        "additionalProperties": true,
                        "required": [
                            "template"
                        ]
                    }
                },
                "nodes": {
                    "type": "array",
                    "additionalItems": true,
                    "items": {
                        "type": "object",
                        "properties": {
                            "name": {
                                "type": "string"
                            },
                            "external": {
                                "type": "boolean",
                                "default": false
                            },
                            "tags": {
                                "type": "array",
                                "additionalItems": true,
                                "uniqueItems": true,
                                "items": {
                                    "type": "string"
                                }
                            },
                            "links": {
                                "type": "array",
                                "additionalItems": true,
                                "items": {
                                    "type": "object",
                                    "properties": {
                                        "ifname": {
                                            "type": "string"
                                        },
                                        "switch": {
                                            "type": "string"
                                        },
                                        "switch_port": {
                                            "type": "string"
                                        },
                                        "lag": {
                                            "type": "string"
                                        },
                                        "speed": {
                                            "oneOf": [
                                              { "type": "string" },
                                              { "type": "integer" }
                                            ]
                                        },
                                        "ct": {
                                            "anyOf": [
                                                {
                                                    "type": "string"
                                                },
                                                {
                                                    "type": "array",
                                                    "additionalItems": true,
                                                    "uniqueItems": true,
                                                    "items": {
                                                        "type": "string"
                                                    }
                                                }
                                            ]
                                        }
                                    },
                                    "additionalProperties": false,
                                    "required": [
                                        "ifname",
                                        "switch",
                                        "switch_port"
                                    ]
                                }
                            }
                        },
                        "additionalProperties": false,
                        "required": [
                            "name"
                        ]
                    }
                }
            },
            "additionalProperties": false,
            "minProperties": 1
        }
    },
    "additionalProperties": true
}